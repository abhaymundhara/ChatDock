{
  "name": "ChatDock",
  "version": "1.0.0",
  "private": true,
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "server": "node src/server/server.js",
    "dev": "electron .",
    "build": "electron-builder",
    "test": "node --test tests/*.spec.mjs"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.chatdock.app",
    "productName": "ChatDock",
    "files": [
      "src/**/*",
      "assets/**/*",
      "config/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "src/server/**/*",
      "assets/**/*",
      "config/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
