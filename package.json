{
  "name": "ChatDock",
  "version": "1.0.0",
  "private": true,
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "server": "node src/server/server.js",
    "dev": "electron .",
    "build": "electron-builder",
    "test": "node --test tests/server-tool-filtering.spec.mjs tests/filesystem-tools.spec.mjs tests/llm-cache.spec.mjs tests/server-integration.spec.mjs",
    "test:all": "node --test tests/*.spec.mjs",
    "test:core": "node --test tests/server-tool-filtering.spec.mjs tests/filesystem-tools.spec.mjs tests/llm-cache.spec.mjs",
    "test:integration": "node --test tests/server-integration.spec.mjs",
    "test:watch": "nodemon --watch src --watch tests --ext js,mjs --exec npm test",
    "lint": "node -c src/server/server.js && node -c src/server/tools/registry.js && node -c src/server/tools/embeddings.js && node -c src/server/utils/llm-cache.js"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.chatdock.app",
    "productName": "ChatDock",
    "files": [
      "src/**/*",
      "assets/**/*",
      "config/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "src/server/**/*",
      "assets/**/*",
      "config/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
